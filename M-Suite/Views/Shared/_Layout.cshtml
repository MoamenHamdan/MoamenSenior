<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - M_Suite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Shared/_Layout.cshtml.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
   
</head>
<body>
<style>
body,html {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #F5F5F5;
  height: 100%;
  overflow: hidden;
}
body{
  display: flex;
  flex-direction: column;
}
.content-wrapper {
display: flex;
flex-grow: 1;
flex-direction: row;
height: 100%;
min-height: 100vh;
overflow: hidden;
}
.top-bar {
display: flex;
justify-content: space-between;
align-items: center;
background-color: #8BCEFF;
border-width: 100px;
padding: 10px 15px;
margin: 5px;
color: black;
border-radius: 20px;
z-index: 1;
}
.sidebar {
width: 220px;
background-color: #8BCEFF;
height: 100%;
display: flex;
flex-direction: column;
padding-top: 20px;
padding-bottom: 80px;
border-radius: 15px; 
left: 44px;
top: 150px;
margin:10px;
overflow-y: auto; /* enables vertical scroll */
box-sizing: border-box;
}

.sidebar-item {
display: flex;
align-items: center;
justify-content: flex-start;
gap: 8px;
padding: 10px 15px;
width: 100%;
box-sizing: border-box;
color: #1E1E1E;
text-decoration: none;
white-space: nowrap;
overflow: hidden;
border-radius: 10px;
}

.sidebar-item .icon {
display: flex;
align-items: center;
justify-content: center;
width: 20px;
height: 20px;
flex-shrink: 0;
}

.sidebar-item .label {
flex-grow: 1;
font-size: 16px;
}

.sidebar-item .arrow {
font-size: 16px;
flex-shrink: 0;
}

/* Remove padding from li if needed */
.menu li,
.option {
padding: 0;
margin: 0;
}



.sidebar-item:hover, .sidebar-item.active {
  background-color: #E6F4FF;
  box-sizing: border-box;
  border-radius: 20px;
  right: 0%;
  left: 0%;
  bottom: 0%;
  top: 0%;
}
.sidebar-item img {
  margin-right: 10px;
  width: 20px;
  height: 20px;
}
.main-content {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
  padding-bottom: 60px;
  flex-direction: column;
}
.logo-placeholder {
  width: 80px;
  height: 40px;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}

.dropdown-link {
display: block;
padding: 6px 10px;
color: #1E1E1E;
text-decoration: none;
border-radius: 20px;
font-size: 14px;
margin-bottom: 4px;
}

.dropdown-link:hover {
background-color: #dff0ff;
}

.dropdown-link.active {
background-color: white;
font-weight: bold;
border: 2px solid #4a90e2;
}
.menu {
list-style: none;
padding: 0;
margin: 0;
display: flex;
flex-direction: column;
gap: 5px;
width: 100%;
box-sizing: border-box;
} 

.option {
color: #1e1e1e;
padding: 0px;
margin: 0px;
cursor: pointer;
border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.dropdown {
list-style-type: none;
padding-left: 20px;
display: none; 
}

.dropdown li {
color: black;
opacity: 70%;
padding: 5px 0;
}


    </style>
    <div class="top-bar">
        <div class="logo-placeholder"></div>
        <div class="user-info">
            <span></span>
            <div style="margin-left: 20px; background-color: white; border-radius: 50%; padding: 10px;">
                Admin
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        <div class="sidebar">
            <ul class="menu">
                <li>
            <a href="#" class="sidebar-item">
                <img src="data:image/svg+xml;base64," alt="Dashboard Icon">
                Dashboard
            </a>
                </li>
               <!-- Master Data -->
        <li class="option">
            <div class="sidebar-item" onclick="toggleDropdown('dropdown1')">
                  <span class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" 
                         viewBox="0 0 24 24" fill="none" stroke="currentColor" 
                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
                         class="lucide lucide-database">
                      <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                      <path d="M3 5V19A9 3 0 0 0 21 19V5"></path>
                      <path d="M3 12A9 3 0 0 0 21 12"></path>
                    </svg>
                  </span>
                  <span class="label">Master Data</span>
                  <span class="arrow">▾</span>
                </div>
                <ul class="dropdown" id="dropdown1">
                    <li><a class="dropdown-link" asp-controller="BusinessUnit" asp-action="Index">BU</a></li>
                    <li><a class="dropdown-link" asp-controller="Thirdparty" asp-action="Index">Customers</a></li>
                    <li><a class="dropdown-link" asp-controller="GeoLocation" asp-action="Index">Geo Location</a></li>
                    <li><a class="dropdown-link" asp-controller="Item" asp-action="Index">Items</a></li>
                    <li><a class="dropdown-link" asp-controller="PriceList" asp-action="Index">Price List</a></li>
                    <li><a class="dropdown-link" asp-controller="PhysicalLocation" asp-action="Index">Warehouse</a></li>
                    <li><a class="dropdown-link" asp-controller="UOM" asp-action="Index">UOM</a></li>
                    <li><a class="dropdown-link" asp-controller="CurrencyRate" asp-action="Index">Currency</a></li>
                  </ul>
                </li>
                <li>
               <!-- Transactions -->
        <li class="option">
            <div class="sidebar-item" onclick="toggleDropdown('dropdown2')">
                  <span class="icon">
                    <svg xmlns="" width="20" height="20" 
                         viewBox="0 0 24 24" fill="none" stroke="currentColor" 
                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
                         class="lucide lucide-database">
                      <ellipse cx="12" cy="5" rx="9" ry="3"></ellipse>
                      <path d="M3 5V19A9 3 0 0 0 21 19V5"></path>
                      <path d="M3 12A9 3 0 0 0 21 12"></path>
                    </svg>
                  </span>
                  <span class="label">Transcations</span>
                  <span class="arrow">▾</span>
                </div>
                <ul class="dropdown" id="dropdown2">
                    <li><a href="/Transactions/SalesOrder" class="dropdown-link">Sales Order</a></li>
                    <li><a href="/Transactions/Invoices" class="dropdown-link">Invoices</a></li>
                    <li><a href="/Transactions/Collections" class="dropdown-link">Collections</a></li>
                  </ul>
                </li>
               <!-- Security Management -->
                <li class="option">
                    <div class="sidebar-item" onclick="toggleDropdown('dropdown3')">
          <span class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield-check">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                <path d="m9 12 2 2 4-4"></path>
            </svg>
          </span>
          <span class="label">Security Management</span>
          <span class="arrow">▾</span>
        </div>
        <ul class="dropdown" id="dropdown3">
            <li><a class="dropdown-link" asp-controller="User" asp-action="Index">Users</a></li>
          </ul>
        </li>
      </ul>
    </div>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <script>
 function toggleDropdown(dropdownId) {
      const dropdown = document.getElementById(dropdownId);
      const isVisible = dropdown.style.display === 'block';
      const dropdowns = document.querySelectorAll('.dropdown');
      dropdowns.forEach(dd => dd.style.display = 'none');
      dropdown.style.display = isVisible ? 'none' : 'block';
  }
</script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>