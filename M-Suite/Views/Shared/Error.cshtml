@using Microsoft.AspNetCore.Hosting
@using Microsoft.Extensions.Hosting
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="display-4 text-danger mb-3">Oops! Something went wrong</h1>
                    <p class="lead text-muted mb-4">We're sorry, but an error occurred while processing your request.</p>
                    
                    @if (Model?.ShowRequestId == true && !string.IsNullOrEmpty(Model.RequestId))
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-home me-2"></i>Go to Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>

                    @if (ViewContext.HttpContext.RequestServices.GetService(typeof(IWebHostEnvironment)) is IWebHostEnvironment env && env.IsDevelopment())
                    {
                        <div class="mt-5">
                            <div class="alert alert-warning">
                                <h5>Development Mode</h5>
                                <p class="mb-0">Detailed error information is available in Development mode. Check the console or logs for more details.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
