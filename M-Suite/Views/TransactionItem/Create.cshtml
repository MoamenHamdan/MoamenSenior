@model M_Suite.Models.ViewModels.TransactionItemViewModel

@{
    ViewData["Title"] = "Create Transaction Item";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">@ViewData["Title"]</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" id="transactionItemForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Transaction Header Card -->
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Transaction Information</h5>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="advancedOptionsToggle">
                            <label class="form-check-label" for="advancedOptionsToggle">Advanced Options</label>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TsiTsId" class="control-label"></label>
                                    <select asp-for="TsiTsId" asp-items="Model.Transactions" class="form-control select2" required>
                                        <option value="">-- Select Transaction --</option>
                                    </select>
                                    <span asp-validation-for="TsiTsId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TsiTstoId" class="control-label"></label>
                                    <select asp-for="TsiTstoId" asp-items="Model.TransactionTypeOptions" class="form-control select2">
                                        <option value="">-- Select Transaction Type --</option>
                                    </select>
                                    <span asp-validation-for="TsiTstoId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TsiLpiId" class="control-label"></label>
                                    <select asp-for="TsiLpiId" asp-items="Model.ListPrices" class="form-control select2">
                                        <option value="">-- Select List Price --</option>
                                    </select>
                                    <span asp-validation-for="TsiLpiId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Advanced Options (Hidden by default) -->
                        <div id="advancedOptions" style="display: none;">
                            <div class="row mt-3">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="TsiOrgId" class="control-label"></label>
                                        <input asp-for="TsiOrgId" class="form-control" />
                                        <span asp-validation-for="TsiOrgId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="TsiTsOrgId" class="control-label"></label>
                                        <input asp-for="TsiTsOrgId" class="form-control" />
                                        <span asp-validation-for="TsiTsOrgId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="TsiTsiId" class="control-label"></label>
                                        <select asp-for="TsiTsiId" asp-items="Model.ParentTransactionItems" class="form-control select2">
                                            <option value="">-- Select Parent Item --</option>
                                        </select>
                                        <span asp-validation-for="TsiTsiId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Items Card -->
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Transaction Items</h5>
                        <div>
                            <button type="button" class="btn btn-primary" id="addItemBtn">
                                <i class="fas fa-plus"></i> Add Item
                            </button>
                            <button type="button" class="btn btn-info" id="scanBarcodeBtn" data-toggle="modal" data-target="#barcodeModal">
                                <i class="fas fa-barcode"></i> Scan Barcode
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="itemsTable">
                                <thead class="bg-light">
                                    <tr>
                                        <th width="25%">Item</th>
                                        <th width="10%">UOM</th>
                                        <th width="15%">Warehouse</th>
                                        <th width="8%">Qty</th>
                                        <th width="10%">Price</th>
                                        <th width="8%">Disc.%</th>
                                        <th width="10%">Disc.Amt</th>
                                        <th width="10%">Total</th>
                                        <th width="4%"></th>
                                    </tr>
                                </thead>
                                <tbody id="itemsTableBody">
                                    @for (int i = 0; i < Model.LineItems.Count; i++)
                                    {
                                        <tr class="item-row">
                                            <td>
                                                <select asp-for="LineItems[i].TsiItId" asp-items="Model.Items"
                                                        class="form-control select2 item-select" required>
                                                    <option value="">-- Select Item --</option>
                                                </select>
                                                <span asp-validation-for="LineItems[i].TsiItId" class="text-danger"></span>
                                            </td>
                                            <td>
                                                <select asp-for="LineItems[i].TsiUomId" asp-items="Model.Uoms"
                                                        class="form-control select2 uom-select" required>
                                                    <option value="">-- Select --</option>
                                                </select>
                                                <span asp-validation-for="LineItems[i].TsiUomId" class="text-danger"></span>
                                            </td>
                                            <td>
                                                <select asp-for="LineItems[i].TsiPlIdWhs" asp-items="Model.Warehouses"
                                                        class="form-control select2 warehouse-select">
                                                    <option value="">-- Select --</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input asp-for="LineItems[i].TsiQuantity" class="form-control quantity"
                                                       min="0" step="0.01" required />
                                                <span asp-validation-for="LineItems[i].TsiQuantity" class="text-danger"></span>
                                            </td>
                                            <td>
                                                <input asp-for="LineItems[i].TsiPrice" class="form-control price"
                                                       min="0" step="0.01" required />
                                                <span asp-validation-for="LineItems[i].TsiPrice" class="text-danger"></span>
                                            </td>
                                            <td>
                                                <input asp-for="LineItems[i].TsiDiscountPercentage" class="form-control discount-percentage"
                                                       min="0" max="100" step="0.01" />
                                            </td>
                                            <td>
                                                <input asp-for="LineItems[i].TsiDiscountAmount" class="form-control discount-amount"
                                                       min="0" step="0.01" />
                                            </td>
                                            <td>
                                                <input type="text" class="form-control item-total" readonly />
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-danger btn-sm remove-item">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-light">
                                    <tr>
                                        <td colspan="5" rowspan="4">
                                            <div class="form-group">
                                                <label asp-for="TsiRemarks" class="control-label"></label>
                                                <textarea asp-for="TsiRemarks" class="form-control" rows="4"></textarea>
                                                <span asp-validation-for="TsiRemarks" class="text-danger"></span>
                                            </div>
                                        </td>
                                        <td colspan="2" class="text-end"><strong>Subtotal:</strong></td>
                                        <td colspan="2">
                                            <input type="text" class="form-control text-end font-weight-bold" id="subtotal" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end"><strong>Total Discount:</strong></td>
                                        <td colspan="2">
                                            <input type="text" class="form-control text-end" id="totalDiscount" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end"><strong>Total Tax:</strong></td>
                                        <td colspan="2">
                                            <input type="text" class="form-control text-end" id="totalTax" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end"><strong>Grand Total:</strong></td>
                                        <td colspan="2">
                                            <input type="text" class="form-control text-end font-weight-bold text-primary" id="grandTotal" readonly>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Card -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TsiFreeComment" class="control-label"></label>
                                    <textarea asp-for="TsiFreeComment" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="TsiFreeComment" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Attachments</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="customFile" multiple>
                                        <label class="custom-file-label" for="customFile">Choose files</label>
                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <label class="control-label">Status</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isApproved">
                                        <label class="form-check-label" for="isApproved">
                                            Approved
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isCompleted">
                                        <label class="form-check-label" for="isCompleted">
                                            Completed
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> Save Transaction
                    </button>
                    <button type="button" class="btn btn-success px-4" id="saveAndNewBtn">
                        <i class="fas fa-file"></i> Save & New
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Barcode Scanner Modal -->
<div class="modal fade" id="barcodeModal" tabindex="-1" role="dialog" aria-labelledby="barcodeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="barcodeModalLabel">Scan Barcode</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <div id="barcodeScanner" style="width: 100%; height: 300px; background-color: #f8f9fa; border: 1px dashed #ccc;">
                        <p class="text-muted mt-5">Scanner will appear here</p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="manualBarcode">Or enter barcode manually:</label>
                    <input type="text" class="form-control" id="manualBarcode" placeholder="Enter barcode">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addBarcodeItem">Add Item</button>
            </div>
        </div>
    </div>
</div>

<!-- Hidden fields for totals -->
<input type="hidden" asp-for="TsiTotalAmount" id="totalAmountField" />
@* <input type="hidden" asp-for="TsiTotalDiscount" id="totalDiscountField" /> *@
@* <input type="hidden" asp-for="TsiTotalTax" id="totalTaxField" /> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            let itemIndex = @Model.LineItems.Count;

            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap4',
                width: '100%'
            });

            // Toggle advanced options
            $('#advancedOptionsToggle').change(function() {
                $('#advancedOptions').toggle(this.checked);
            });

            // Add new item row
            $('#addItemBtn').click(function() {
                const newRow = `
                    <tr class="item-row">
                        <td>
                            <select name="LineItems[${itemIndex}].TsiItId" class="form-control select2 item-select" required>
                                <option value="">-- Select Item --</option>
        @foreach (var item in Model.Items)
        {
                                        <option value="@item.Value" data-price="@item.GetType().GetProperty("Price")?.GetValue(item, null)">@item.Text</option>
        }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="LineItems[${itemIndex}].TsiItId" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <select name="LineItems[${itemIndex}].TsiUomId" class="form-control select2 uom-select" required>
                                <option value="">-- Select --</option>
        @foreach (var uom in Model.Uoms)
        {
                                        <option value="@uom.Value">@uom.Text</option>
        }
                            </select>
                            <span class="text-danger field-validation-valid" data-valmsg-for="LineItems[${itemIndex}].TsiUomId" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <select name="LineItems[${itemIndex}].TsiPlIdWhs" class="form-control select2 warehouse-select">
                                <option value="">-- Select --</option>
        @foreach (var whs in Model.Warehouses)
        {
                                        <option value="@whs.Value">@whs.Text</option>
        }
                            </select>
                        </td>
                        <td>
                            <input name="LineItems[${itemIndex}].TsiQuantity" class="form-control quantity" min="0" step="0.01" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="LineItems[${itemIndex}].TsiQuantity" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <input name="LineItems[${itemIndex}].TsiPrice" class="form-control price" min="0" step="0.01" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="LineItems[${itemIndex}].TsiPrice" data-valmsg-replace="true"></span>
                        </td>
                        <td>
                            <input name="LineItems[${itemIndex}].TsiDiscountPercentage" class="form-control discount-percentage" min="0" max="100" step="0.01" />
                        </td>
                        <td>
                            <input name="LineItems[${itemIndex}].TsiDiscountAmount" class="form-control discount-amount" min="0" step="0.01" />
                        </td>
                        <td>
                            <input type="text" class="form-control item-total" readonly />
                        </td>
                        <td class="text-center">
                            <button type="button" class="btn btn-danger btn-sm remove-item">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;

                $('#itemsTableBody').append(newRow);
                $('#itemsTableBody tr:last-child .select2').select2({
                    theme: 'bootstrap4',
                    width: '100%'
                });

                initializeRowCalculations($('#itemsTableBody tr:last-child'));
                itemIndex++;
            });

            // Barcode scanning functionality
            $('#addBarcodeItem').click(function() {
                const barcode = $('#manualBarcode').val();
                if (barcode) {
                    // Simulate finding an item by barcode
                    const matchingItem = $('.item-select option').filter(function() {
                        return $(this).text().includes(barcode) || $(this).val() === barcode;
                    }).first();

                    if (matchingItem.length) {
                        $('#addItemBtn').click();
                        const newRow = $('#itemsTableBody tr:last-child');
                        newRow.find('.item-select').val(matchingItem.val()).trigger('change');

                        // Set default price if available
                        const itemPrice = matchingItem.data('price');
                        if (itemPrice) {
                            newRow.find('.price').val(itemPrice);
                        }

                        // Focus on quantity field
                        newRow.find('.quantity').focus();

                        $('#barcodeModal').modal('hide');
                        $('#manualBarcode').val('');
                    } else {
                        alert('Item not found with this barcode');
                    }
                }
            });

            // Remove item row
            $(document).on('click', '.remove-item', function() {
                $(this).closest('tr').remove();
                calculateTotals();
            });

            // Initialize calculations for existing rows
            $('.item-row').each(function() {
                initializeRowCalculations($(this));
            });

            function initializeRowCalculations(row) {
                const inputs = row.find('.quantity, .price, .discount-percentage, .discount-amount');
                inputs.on('input', function() {
                    calculateRowTotal(row);
                    calculateTotals();
                });

                // Handle discount percentage and amount mutual exclusivity
                row.find('.discount-percentage').on('input', function() {
                    if ($(this).val()) {
                        row.find('.discount-amount').val('').prop('disabled', true);
                    } else {
                        row.find('.discount-amount').prop('disabled', false);
                    }
                });

                row.find('.discount-amount').on('input', function() {
                    if ($(this).val()) {
                        row.find('.discount-percentage').val('').prop('disabled', true);
                    } else {
                        row.find('.discount-percentage').prop('disabled', false);
                    }
                });

                // Auto-fill price when item is selected
                row.find('.item-select').on('change', function() {
                    const selectedOption = $(this).find('option:selected');
                    const itemPrice = selectedOption.data('price');
                    if (itemPrice) {
                        row.find('.price').val(itemPrice).trigger('input');
                    }
                });
            }

            function calculateRowTotal(row) {
                const quantity = parseFloat(row.find('.quantity').val()) || 0;
                const price = parseFloat(row.find('.price').val()) || 0;
                const discountPercentage = parseFloat(row.find('.discount-percentage').val()) || 0;
                const discountAmount = parseFloat(row.find('.discount-amount').val()) || 0;

                const subtotal = quantity * price;
                let discount = 0;

                if (discountPercentage > 0) {
                    discount = subtotal * (discountPercentage / 100);
                } else if (discountAmount > 0) {
                    discount = discountAmount;
                }

                const total = subtotal - discount;
                row.find('.item-total').val(total.toFixed(2));
            }

            function calculateTotals() {
                let subtotal = 0;
                let totalDiscount = 0;

                $('.item-row').each(function() {
                    const rowTotal = parseFloat($(this).find('.item-total').val()) || 0;
                    const quantity = parseFloat($(this).find('.quantity').val()) || 0;
                    const price = parseFloat($(this).find('.price').val()) || 0;
                    const discountPercentage = parseFloat($(this).find('.discount-percentage').val()) || 0;
                    const discountAmount = parseFloat($(this).find('.discount-amount').val()) || 0;

                    const rowSubtotal = quantity * price;
                    let rowDiscount = 0;

                    if (discountPercentage > 0) {
                        rowDiscount = rowSubtotal * (discountPercentage / 100);
                    } else if (discountAmount > 0) {
                        rowDiscount = discountAmount;
                    }

                    subtotal += rowSubtotal;
                    totalDiscount += rowDiscount;
                });

                const taxRate = 0.10; // 10% tax rate
                const taxableAmount = subtotal - totalDiscount;
                const totalTax = taxableAmount * taxRate;
                const grandTotal = subtotal - totalDiscount + totalTax;

                $('#subtotal').val(subtotal.toFixed(2));
                $('#totalDiscount').val(totalDiscount.toFixed(2));
                $('#totalTax').val(totalTax.toFixed(2));
                $('#grandTotal').val(grandTotal.toFixed(2));

                // Update hidden fields
                $('#totalAmountField').val(grandTotal.toFixed(2));
                $('#totalDiscountField').val(totalDiscount.toFixed(2));
                $('#totalTaxField').val(totalTax.toFixed(2));
            }

            // Save and New button
            $('#saveAndNewBtn').click(function() {
                $('#transactionItemForm').append('<input type="hidden" name="saveAndNew" value="true" />');
                $('#transactionItemForm').submit();
            });

            // File input label
            $('.custom-file-input').on('change', function() {
                let fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(fileName || 'Choose files');
            });

            // Form validation
            $('#transactionItemForm').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');

                // Validate that at least one item is added
                if ($('.item-row').length === 0) {
                    e.preventDefault();
                    toastr.error('Please add at least one item to the transaction.');
                    return false;
                }
            });
        });
    </script>

