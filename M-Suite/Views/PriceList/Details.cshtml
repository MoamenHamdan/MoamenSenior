@model M_Suite.Models.Listprice

@{
    ViewData["Title"] = "Price List Details";
}

<div class="container-fluid pl-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-tags me-2"></i>Price List Details</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Code:</dt>
                        <dd class="col-sm-9">@Model.LpCode</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.LpDescriptionLan1</dd>

                        <dt class="col-sm-3">Secondary Description:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.LpDescriptionLan2) ? "-" : Model.LpDescriptionLan2)</dd>

                        <dt class="col-sm-3">Tertiary Description:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.LpDescriptionLan3) ? "-" : Model.LpDescriptionLan3)</dd>
                    </dl>
                </div>
            </div>

            <!-- Settings Information -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Settings</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Business Unit:</dt>
                        <dd class="col-sm-9">@(Model.LpBu?.BuDescriptionLan1 ?? "-")</dd>

                        <dt class="col-sm-3">Currency:</dt>
                        <dd class="col-sm-9">@Model.LpCdIdCurNavigation?.CdDescriptionLan1</dd>

                        <dt class="col-sm-3">Priority Level:</dt>
                        <dd class="col-sm-9">@(Model.LpLevel?.ToString() ?? "-")</dd>
                    </dl>
                </div>
            </div>

            <!-- Date Range -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Date Range</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">From Date:</dt>
                        <dd class="col-sm-9">@Model.LpFromDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-3">To Date:</dt>
                        <dd class="col-sm-9">@Model.LpToDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.LpActive == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Price List Items -->
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list-ul me-2"></i>Price List Items</h5>
                        <a asp-action="AddItems" asp-controller="PriceListItems" asp-route-id="@Model.LpId" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i> Add Items
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.ListpriceItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item Code</th>
                                        <th>Description</th>
                                        <th>UOM</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-end">Discount</th>
                                        <th class="text-end">Max Discount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListpriceItems)
                                    {
                                        <tr>
                                            <td>@item.LpiIt?.ItCode</td>
                                            <td>@item.LpiIt?.ItDescriptionLan1</td>
                                            <td>@item.LpiUom?.UomCode</td>
                                            <td class="text-end">@item.LpiPrice.ToString("N2")</td>
                                            <td class="text-end">@(item.LpiDiscount?.ToString("N2") ?? "0.00")</td>
                                            <td class="text-end">@(item.LpiMaxDiscount?.ToString("N2") ?? "0.00")</td>
                                            <td>
                                                <a asp-action="EditItemPrice" asp-controller="PriceListItems" asp-route-id="@item.LpiId"
                                                   class="btn btn-sm btn-outline-primary" title="Edit Price">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>No items have been added to this price list yet.
                        </div>
                    }
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.LpId" class="btn btn-primary me-md-2">
                    <i class="fas fa-edit me-2"></i>Edit Price List
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .pl-container {
            max-width: 1400px;
            margin-top: 2rem;
        }

        .table th {
            white-space: nowrap;
        }

        .badge {
            font-size: 0.9em;
            padding: 0.35em 0.65em;
        }
    </style>
}