@model M_Suite.Models.Listprice

@{
    ViewData["Title"] = "Price List Details";
}

<div class="container">
    <h1>Price List Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>@Model.LpCode - @Model.LpDescriptionLan1</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Business Unit</dt>
                <dd class="col-sm-9">@Model.LpBu?.BuDescriptionLan1</dd>

                <dt class="col-sm-3">Currency</dt>
                <dd class="col-sm-9">@Model.LpCdIdCurNavigation?.CdId</dd>

                <dt class="col-sm-3">From Date</dt>
                <dd class="col-sm-9">@Model.LpFromDate.ToShortDateString()</dd>

                <dt class="col-sm-3">To Date</dt>
                <dd class="col-sm-9">@Model.LpToDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.LpActive == 1)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.LpId" class="btn btn-warning">Edit</a>
            <a asp-action="AddItems" asp-route-id="@Model.LpId" class="btn btn-success">Add Items</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h4>Items in Price List</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Item Code</th>
                            <th>Description</th>
                            <th>UOM</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>Max Discount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListpriceItems)
                        {
                            <tr>
                                <td>@item.LpiIt?.ItCode</td>
                                <td>@item.LpiIt?.ItDescriptionLan1</td>
                                <td>@item.LpiUom?.UomCode</td>
                                <td>@item.LpiPrice.ToString("N2")</td>
                                <td>@(item.LpiDiscount?.ToString("N2") ?? "0.00")</td>
                                <td>@(item.LpiMaxDiscount?.ToString("N2") ?? "0.00")</td>
                                <td>
                                    <a asp-action="EditItemPrice" asp-route-id="@item.LpiId" class="btn btn-warning btn-sm">Edit Price</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 