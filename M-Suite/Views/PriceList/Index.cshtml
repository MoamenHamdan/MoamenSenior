@model IEnumerable<M_Suite.Models.Listprice>

@{
    ViewData["Title"] = "Price Lists";
}

<div class="container">
    <h1>Price Lists</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Price List</a>
    </p>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Business Unit</th>
                            <th>Currency</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LpCode</td>
                                <td>@item.LpDescriptionLan1</td>
                                <td>@(item.LpBu?.BuDescriptionLan1 ?? "-")</td>
                                <td>@(item.LpCdIdCurNavigation?.CdDescriptionLan1 ?? "-")</td>
                                <td>@(item.LpFromDate.ToString("dd/MM/yyyy"))</td>
                                <td>@(item.LpToDate.ToString("dd/MM/yyyy"))</td>
                                <td>
                                    @if (item.LpActive == 1)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.LpId" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.LpId" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="AddItems" asp-controller="PriceListItems" asp-route-id="@item.LpId" class="btn btn-success btn-sm">Add Items</a>
                                        <a asp-action="Delete" asp-route-id="@item.LpId" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 