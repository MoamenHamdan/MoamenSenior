@model IEnumerable<M_Suite.Models.Listprice>

@{
    ViewData["Title"] = "Price Lists";
}

<div class="container">
    <h1>Price Lists</h1>

    <p>
        <a asp-action="SelectItems" class="btn btn-primary">Create New Price List</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LpCode)</th>
                    <th>@Html.DisplayNameFor(model => model.LpDescriptionLan1)</th>
                    <th>@Html.DisplayNameFor(model => model.LpBu)</th>
                    <th>@Html.DisplayNameFor(model => model.LpFromDate)</th>
                    <th>@Html.DisplayNameFor(model => model.LpToDate)</th>
                    <th>@Html.DisplayNameFor(model => model.LpActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.LpCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.LpDescriptionLan1)</td>
                        <td>@(item.LpBu != null ? item.LpBu.BuDescriptionLan1 : "")</td>
                        <td>@Html.DisplayFor(modelItem => item.LpFromDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.LpToDate)</td>
                        <td>
                            @if (item.LpActive == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.LpId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.LpId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="AddItems" asp-route-id="@item.LpId" class="btn btn-success btn-sm">Add Items</a>
                                <a asp-action="Delete" asp-route-id="@item.LpId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 