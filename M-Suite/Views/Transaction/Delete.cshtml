@model M_Suite.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container-fluid transaction-container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Transaction #@Model.TsNumber</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                <p>You are about to permanently delete this transaction. This action cannot be undone.</p>
            </div>

            <!-- Basic Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Transaction Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Transaction Number:</dt>
                        <dd class="col-sm-8">@Model.TsNumber</dd>

                        <dt class="col-sm-4">Transaction Date:</dt>
                        <dd class="col-sm-8">@Model.TsDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Due Date:</dt>
                        <dd class="col-sm-8">@(Model.TsDueDate?.ToShortDateString() ?? "N/A")</dd>

                        <dt class="col-sm-4">Business Unit:</dt>
                        <dd class="col-sm-8">@(Model.TsBu?.BuCode ?? "N/A")</dd>

                        <dt class="col-sm-4">Transaction Type:</dt>
                        <dd class="col-sm-8">@(Model.TsTst?.TstDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@(Model.TsTss?.TssDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-4">Total Amount:</dt>
                        <dd class="col-sm-8">@Model.TsTotal.ToString("C")</dd>
                    </dl>
                </div>
            </div>

            <!-- Financial Summary -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Financial Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Total Discount:</dt>
                        <dd class="col-sm-8">@Model.TsTotalDiscount.ToString("C")</dd>

                        <dt class="col-sm-4">Total Tax:</dt>
                        <dd class="col-sm-8">@(Model.TsTotalTax?.ToString("C") ?? "N/A")</dd>

                        <dt class="col-sm-4">Final Amount:</dt>
                        <dd class="col-sm-8">@(Model.TsTotalFinal?.ToString("C") ?? "N/A")</dd>

                        <dt class="col-sm-4">Currency:</dt>
                        <dd class="col-sm-8">@(Model.TsCdIdCurNavigation?.CdDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-4">Currency Rate:</dt>
                        <dd class="col-sm-8">@Model.TsCurRate</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="TsId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .transaction-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        dl.row dt {
            font-weight: 500;
            color: #6c757d;
        }

        dl.row dd {
            font-weight: 400;
        }
    </style>
}