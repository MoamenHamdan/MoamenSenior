@model IEnumerable<M_Suite.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Transactions</h3>
                <a asp-action="Create" class="btn btn-light btn-sm">
                    <i class="fas fa-plus me-1"></i> Create New
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="transactionsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Number</th>
                            <th>Date</th>
                            <th>Due Date</th>
                            <th>Reference</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Business Unit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.TsNumber)</strong>
                                </td>
                                <td>
                                    @item.TsDate.ToString("yyyy-MM-dd")
                                </td>
                                <td>
                                    @(item.TsDueDate?.ToString("yyyy-MM-dd") ?? "N/A")
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.TsOurReference))
                                    {
                                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.TsOurReference)</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.TsTheirReference))
                                    {
                                        <span class="badge bg-secondary ms-1">@Html.DisplayFor(modelItem => item.TsTheirReference)</span>
                                    }
                                </td>

                                <td>
                                    @if (item.TsTss != null)
                                    {
                                        <span class="badge @GetStatusBadgeClass(item.TsTss.TssDescriptionLan1)">@item.TsTss.TssDescriptionLan1</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong>@(item.TsTotalFinal?.ToString("C") ?? "N/A")</strong>
                                </td>
                                <td>
                                    @if (item.TsBu != null)
                                    {
                                        @item.TsBu.BuDescriptionLan1
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.TsId" class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.TsId" class="btn btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.TsId" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div class="small text-muted">
                    Showing @Model.Count() transactions
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Create New
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table {
            font-size: 0.9rem;
        }

            .table th {
                white-space: nowrap;
                position: relative;
            }

            .table td {
                vertical-align: middle;
            }

        .badge {
            font-size: 0.8em;
            font-weight: 500;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        #transactionsTable tbody tr {
            transition: all 0.2s ease;
        }

            #transactionsTable tbody tr:hover {
                background-color: rgba(0, 0, 0, 0.03);
            }
    </style>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        switch (status?.ToLower())
        {
            case "completed":
            case "paid":
                return "bg-success";
            case "pending":
                return "bg-warning text-dark";
            case "cancelled":
                return "bg-danger";
            case "draft":
                return "bg-secondary";
            default:
                return "bg-info";
        }
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                responsive: true,
                dom: '<"top"f>rt<"bottom"lip><"clear">',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search transactions...",
                },
                columnDefs: [
                    { orderable: false, targets: [8] } // Disable sorting on actions column
                ]
            });
        });
    </script>
}