@model IEnumerable<M_Suite.Models.Transaction>
@using M_Suite.Helpers

@{
    ViewData["Title"] = "Transactions";
    var breadcrumbs = ViewHelper.CreateBreadcrumbs("Transaction", "Index");
}
@await Html.PartialAsync("_Breadcrumbs", breadcrumbs)

<div class="container-fluid transaction-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h3 class="mb-0"><i class="fas fa-exchange-alt me-2"></i>Transactions</h3>
                <div class="btn-group">
                    <a asp-controller="Export" asp-action="ExportTransactions" class="btn btn-light me-2">
                        <i class="fas fa-download me-1"></i> Export CSV
                    </a>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="fas fa-plus me-1"></i> Create New
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="transactionsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Transaction #</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Status</th>
                         
                            <th class="text-end">Amount</th>
                            <th>Business Unit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.TsNumber</strong>
                                </td>
                                <td>
                                    <div>@item.TsDate.ToString("dd MMM yyyy")</div>
                                    @if (item.TsDueDate.HasValue)
                                    {
                                        <small class="text-muted">Due: @item.TsDueDate.Value.ToString("dd MMM yyyy")</small>
                                    }
                                </td>
                                <td>
                                    @if (item.TsTst != null)
                                    {
                                        <span class="badge bg-info">@item.TsTst.TstDescriptionLan1</span>
                                    }
                                </td>
                                <td>
                                    @if (item.TsTss != null)
                                    {
                                        <span class="badge @GetStatusBadgeClass(item.TsTss.TssDescriptionLan1)">@item.TsTss.TssDescriptionLan1</span>
                                    }
                                </td>
                             
                                <td class="text-end">
                                    <strong>@FormatHelper.FormatCurrency(item.TsTotalFinal)</strong>
                                    @if (item.TsTotalDiscount > 0)
                                    {
                                        <div class="text-danger small">Discount: @FormatHelper.FormatCurrency(item.TsTotalDiscount)</div>
                                    }
                                </td>
                                <td>
                                    @if (item.TsBu != null)
                                    {
                                        @item.TsBu.BuDescriptionLan1
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.TsId" class="btn btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.TsId" class="btn btn-outline-secondary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.TsId" class="btn btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div class="small text-muted">
                    Showing @Model.Count() transactions
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Create New Transaction
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <style>
        .transaction-container {
            max-width: 1800px;
            margin-top: 2rem;
        }

        .table th {
            white-space: nowrap;
            vertical-align: middle;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.85em;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        #transactionsTable tbody tr {
            transition: all 0.2s ease;
        }

            #transactionsTable tbody tr:hover {
                background-color: rgba(0, 0, 0, 0.03);
            }

        .text-muted {
            font-size: 0.85em;
        }
    </style>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        switch (status?.ToLower())
        {
            case "completed":
            case "paid":
            case "approved":
                return "bg-success";
            case "pending":
            case "in progress":
                return "bg-warning text-dark";
            case "cancelled":
            case "rejected":
            case "failed":
                return "bg-danger";
            case "draft":
                return "bg-secondary";
            case "refunded":
                return "bg-info";
            default:
                return "bg-primary";
        }
    }
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                responsive: true,
                dom: '<"top"<"d-flex justify-content-between align-items-center"lf>>rt<"bottom"ip><"clear">',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search transactions...",
                },
                columnDefs: [
                    { orderable: false, targets: [7] }, // Disable sorting on actions column
                    { type: 'date', targets: [1] }, // Proper date sorting
                    { type: 'currency', targets: [5] } // Currency sorting
                ],
                order: [[1, 'desc']] // Default sort by date descending
            });
        });
    </script>
}