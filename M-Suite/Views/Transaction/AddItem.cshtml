@model M_Suite.Models.ViewModels.TransactionItemAddViewModel

@{
    ViewData["Title"] = "Add Item to Transaction";
}

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add Item to Transaction #@Model.TransactionNumber</h3>
                <a asp-action="Details" asp-route-id="@Model.TsiTsId" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to Transaction
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="AddItem" class="needs-validation" novalidate>
                <input type="hidden" asp-for="TsiTsId" />
                <input type="hidden" asp-for="TransactionNumber" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 required">
                            <select asp-for="TsiItId" class="form-select" asp-items="Model.Items" required>
                                <option value="">-- Select Item --</option>
                            </select>
                            <label asp-for="TsiItId">Item</label>
                            <span asp-validation-for="TsiItId" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 required">
                            <select asp-for="TsiUomId" class="form-select" asp-items="Model.Uoms" required>
                                <option value="">-- Select Unit of Measure --</option>
                            </select>
                            <label asp-for="TsiUomId">Unit of Measure</label>
                            <span asp-validation-for="TsiUomId" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-floating mb-3 required">
                            <input asp-for="TsiQuantity" class="form-control" type="number" step="0.01" min="0.01" placeholder=" " required />
                            <label asp-for="TsiQuantity">Quantity</label>
                            <span asp-validation-for="TsiQuantity" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3 required">
                            <input asp-for="TsiPrice" class="form-control" type="number" step="0.01" min="0" placeholder=" " required />
                            <label asp-for="TsiPrice">Price</label>
                            <span asp-validation-for="TsiPrice" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3">
                            <select asp-for="TsiPlIdWhs" class="form-select" asp-items="Model.Warehouses" required>
                                <option value="">-- Select Warehouse --</option>
                            </select>
                            <label asp-for="TsiPlIdWhs">Warehouse</label>
                            <span asp-validation-for="TsiPlIdWhs" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="TsiDiscountPercentage" class="form-control" type="number" step="0.01" min="0" max="100" placeholder=" " />
                            <label asp-for="TsiDiscountPercentage">Discount (%)</label>
                            <span asp-validation-for="TsiDiscountPercentage" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="TsiDiscountAmount" class="form-control" type="number" step="0.01" min="0" placeholder=" " />
                            <label asp-for="TsiDiscountAmount">Discount Amount</label>
                            <span asp-validation-for="TsiDiscountAmount" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="TsiRemarks" class="form-control" style="height: 100px" placeholder=" "></textarea>
                            <label asp-for="TsiRemarks">Remarks</label>
                            <span asp-validation-for="TsiRemarks" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Price Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Subtotal:</label>
                                    <div class="h4 text-primary" id="subtotal">$0.00</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Discount:</label>
                                    <div class="h4 text-danger" id="discountAmount">$0.00</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Line Total:</label>
                                    <div class="h4 text-success" id="lineTotal">$0.00</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-route-id="@Model.TsiTsId" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i> Add Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .form-floating > label {
            color: #6c757d;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        .required label::after {
            content: " *";
            color: #dc3545;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Initialize select2 for better dropdown experience
            $('.form-select').select2({
                theme: 'bootstrap4',
                width: '100%'
            });
            
            // Calculate totals when inputs change
            function calculateTotals() {
                const quantity = parseFloat($('#TsiQuantity').val()) || 0;
                const price = parseFloat($('#TsiPrice').val()) || 0;
                const discountPercentage = parseFloat($('#TsiDiscountPercentage').val()) || 0;
                const discountAmount = parseFloat($('#TsiDiscountAmount').val()) || 0;
                
                const subtotal = quantity * price;
                let totalDiscount = 0;
                
                // If both discount types are provided, use only the direct amount
                if (discountAmount > 0) {
                    totalDiscount = discountAmount;
                } else if (discountPercentage > 0) {
                    totalDiscount = subtotal * (discountPercentage / 100);
                }
                
                const lineTotal = Math.max(0, subtotal - totalDiscount);
                
                // Update display
                $('#subtotal').text('$' + subtotal.toFixed(2));
                $('#discountAmount').text('$' + totalDiscount.toFixed(2));
                $('#lineTotal').text('$' + lineTotal.toFixed(2));
            }
            
            // Attach events
            $('#TsiQuantity, #TsiPrice, #TsiDiscountPercentage, #TsiDiscountAmount').on('input', calculateTotals);
            
            // Initialize calculations
            calculateTotals();
        });
    </script>
} 