@model M_Suite.Models.Transaction
@using M_Suite.Helpers
@using M_Suite.Helpers

@{
    ViewData["Title"] = "Transaction Details";
    var breadcrumbs = ViewHelper.CreateBreadcrumbs("Transaction", "Details", Model.TsNumber);
}
@await Html.PartialAsync("_Breadcrumbs", breadcrumbs)

<div class="container-fluid transaction-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Transaction Details #@Model.TsNumber</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Basic Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Transaction Number:</dt>
                        <dd class="col-sm-9">@Model.TsNumber</dd>

                        <dt class="col-sm-3">Transaction Date:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatDate(Model.TsDate)</dd>

                        <dt class="col-sm-3">Due Date:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatDate(Model.TsDueDate)</dd>

                        <dt class="col-sm-3">Business Unit:</dt>
                        <dd class="col-sm-9">@(Model.TsBu?.BuCode ?? "N/A")</dd>

                        <dt class="col-sm-3">Responsible User:</dt>
                        <dd class="col-sm-9">@(Model.TsUs?.UsFirstName ?? "N/A")</dd>

                        <dt class="col-sm-3">Our Reference:</dt>
                        <dd class="col-sm-9">@(Model.TsOurReference ?? "N/A")</dd>

                        <dt class="col-sm-3">Their Reference:</dt>
                        <dd class="col-sm-9">@(Model.TsTheirReference ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <!-- Transaction Type Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Transaction Type</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Transaction Type:</dt>
                        <dd class="col-sm-9">@(Model.TsTst?.TstDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-3">Transaction Status:</dt>
                        <dd class="col-sm-9">@(Model.TsTss?.TssDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-3">Payment Type:</dt>
                        <dd class="col-sm-9">@(Model.TsPtId.HasValue ? "Yes" : "No")</dd>

                        <dt class="col-sm-3">Source:</dt>
                        <dd class="col-sm-9">@(Model.TsCdIdSrcNavigation?.CdDescriptionLan1 ?? "N/A")</dd>

                        <dt class="col-sm-3">Currency:</dt>
                        <dd class="col-sm-9">@(Model.TsCdIdCurNavigation?.CdDescriptionLan1 ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <!-- Financial Details Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Financial Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Total Amount:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsTotal)</dd>

                        <dt class="col-sm-3">Total (Base Currency):</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsTotalBc)</dd>

                        <dt class="col-sm-3">Total Discount:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsTotalDiscount)</dd>

                        <dt class="col-sm-3">Total Tax:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsTotalTax)</dd>

                        <dt class="col-sm-3">Final Amount:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsTotalFinal)</dd>

                        <dt class="col-sm-3">Currency Rate:</dt>
                        <dd class="col-sm-9">@Model.TsCurRate</dd>

                        <dt class="col-sm-3">Discount Amount:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatCurrency(Model.TsDiscountAmount)</dd>
                    </dl>
                </div>
            </div>

            <!-- Additional Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-ellipsis-h me-2"></i>Additional Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Remarks:</dt>
                        <dd class="col-sm-9">@(Model.TsRemarks ?? "N/A")</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatDateTime(Model.TsCreateDate)</dd>

                        <dt class="col-sm-3">Modified Date:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatDateTime(Model.TsModifiedDate)</dd>

                        <dt class="col-sm-3">Exported Date:</dt>
                        <dd class="col-sm-9">@FormatHelper.FormatDateTime(Model.TsExportedDate)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model.TsId" class="btn btn-primary me-md-2">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .transaction-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        dl.row dt {
            font-weight: 500;
            color: #6c757d;
        }

        dl.row dd {
            font-weight: 400;
        }
    </style>
}






