@model IEnumerable<M_Suite.Models.User>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="user-management-container">
    <div class="user-management-header">
        <div class="header-content">
            <h1><i class="fas fa-users-cog"></i> User Management</h1>
            <p>Manage all system users and their permissions</p>
        </div>
        <div class="header-actions">
            <form asp-controller="User" asp-action="Index" method="get" class="search-form">
                <div class="search-input">
                    <input type="text" name="searchString" placeholder="Search users..." value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="search-button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
            <a asp-action="Create" class="create-user-btn">
                <i class="fas fa-user-plus"></i> Add User
            </a>
        </div>
    </div>



    <div class="user-table-wrapper">
        <table class="user-table">
            <thead>
                <tr>
                    <th class="user-code">Code</th>
                    <th class="user-name">Name</th>
                    <th class="user-shortname">Short Name</th>
                    <th class="user-username">Username</th>
                    
                    <th class="user-status">Status</th>
                    <th class="user-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="user-code">@Html.DisplayFor(modelItem => item.UsCode)</td>
                        <td class="user-name">
                            <div class="user-name-primary">@Html.DisplayFor(modelItem => item.UsFirstName) @Html.DisplayFor(modelItem => item.UsLastName)</div>
                            <div class="user-type">@Html.DisplayFor(modelItem => item.UsType)</div>
                        </td>
                        <td class="user-shortname">@Html.DisplayFor(modelItem => item.UsShortName)</td>
                        <td class="user-username">@Html.DisplayFor(modelItem => item.UsLogin)</td>
                       
                        <td class="user-status">
                            <span class="status-badge @(item.UsActive == 1 ? "active" : "inactive")">
                                @(item.UsActive == 1 ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td class="user-actions">
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.UsId" class="action-btn edit-btn" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.UsId" class="action-btn details-btn" title="Details">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.UsId" class="action-btn delete-btn" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="pagination-container">
        <div class="pagination-info">
            Showing 1 to 10 of @Model.Count() entries
        </div>
        <div class="pagination-controls">
            <button class="pagination-btn" disabled><i class="fas fa-angle-double-left"></i></button>
            <button class="pagination-btn" disabled><i class="fas fa-angle-left"></i></button>
            <button class="pagination-btn active">1</button>
            <button class="pagination-btn">2</button>
            <button class="pagination-btn">3</button>
            <button class="pagination-btn"><i class="fas fa-angle-right"></i></button>
            <button class="pagination-btn"><i class="fas fa-angle-double-right"></i></button>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #4361ee;
        --primary-hover: #3a56d4;
        --success-color: #4cc9a0;
        --danger-color: #f72585;
        --warning-color: #f8961e;
        --info-color: #4895ef;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --gray-color: #6c757d;
        --border-color: #dee2e6;
        --table-hover: #f1f5f9;
    }

    .user-management-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .user-management-header {
        background-color: #f8f9fa;
        padding: 20px 25px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .header-content h1 {
        margin: 0;
        font-size: 1.75rem;
        color: var(--dark-color);
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
    }

    .header-content p {
        margin: 8px 0 0;
        color: var(--gray-color);
        font-size: 0.95rem;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .search-form {
        position: relative;
    }

    .search-input {
        display: flex;
        align-items: center;
        position: relative;
    }

        .search-input input {
            padding: 10px 15px;
            padding-right: 40px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 0.95rem;
            width: 250px;
            transition: all 0.3s ease;
            background-color: #fff;
        }

            .search-input input:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
            }

    .search-button {
        position: absolute;
        right: 0;
        top: 0;
        height: 100%;
        background: transparent;
        border: none;
        color: var(--gray-color);
        padding: 0 12px;
        cursor: pointer;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .search-button:hover {
            color: var(--primary-color);
        }

    .create-user-btn {
        background-color: var(--primary-color);
        color: white;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }

        .create-user-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

    .table-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 25px;
        background-color: #fff;
        border-bottom: 1px solid var(--border-color);
    }

    .items-per-page {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .items-per-page label {
            font-size: 0.9rem;
            color: var(--gray-color);
        }

        .items-per-page select {
            padding: 6px 10px;
            border-radius: 4px;
            border: 1px solid var(--border-color);
            background-color: #fff;
            font-size: 0.9rem;
            cursor: pointer;
        }

            .items-per-page select:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 2px rgba(67, 97, 238, 0.15);
            }

    .quick-search {
        display: flex;
        align-items: center;
        position: relative;
    }

        .quick-search input {
            padding: 6px 12px;
            padding-right: 35px;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            font-size: 0.9rem;
            width: 200px;
        }

            .quick-search input:focus {
                outline: none;
                border-color: var(--primary-color);
            }

        .quick-search button {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            background: transparent;
            border: none;
            color: var(--gray-color);
            padding: 0 10px;
            cursor: pointer;
        }

            .quick-search button:hover {
                color: var(--primary-color);
            }

    .user-table-wrapper {
        padding: 0;
        overflow-x: auto;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
    }

        .user-table th {
            background-color: #f1f5f9;
            padding: 14px 16px;
            text-align: left;
            font-weight: 600;
            color: #4a5568;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--border-color);
        }

        .user-table td {
            padding: 14px 16px;
            border-bottom: 1px solid var(--border-color);
            color: #4a5568;
            vertical-align: middle;
        }

        .user-table tr:hover td {
            background-color: var(--table-hover);
        }

    .user-name-primary {
        font-weight: 500;
        color: var(--dark-color);
    }

    .user-type {
        font-size: 0.8rem;
        color: var(--gray-color);
        margin-top: 3px;
    }

    .status-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

        .status-badge.active {
            background-color: rgba(76, 201, 160, 0.1);
            color: var(--success-color);
        }

        .status-badge.inactive {
            background-color: rgba(247, 37, 133, 0.1);
            color: var(--danger-color);
        }

    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 34px;
        height: 34px;
        border-radius: 6px;
        transition: all 0.2s ease;
        color: #fff;
    }

    .edit-btn {
        background-color: var(--info-color);
    }

        .edit-btn:hover {
            background-color: #3d7fd6;
            transform: translateY(-1px);
        }

    .details-btn {
        background-color: var(--success-color);
    }

        .details-btn:hover {
            background-color: #43b58b;
            transform: translateY(-1px);
        }

    .delete-btn {
        background-color: var(--danger-color);
    }

        .delete-btn:hover {
            background-color: #e5177b;
            transform: translateY(-1px);
        }

    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 25px;
        border-top: 1px solid var(--border-color);
    }

    .pagination-info {
        font-size: 0.9rem;
        color: var(--gray-color);
    }

    .pagination-controls {
        display: flex;
        gap: 5px;
    }

    .pagination-btn {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
        background-color: #fff;
        color: var(--dark-color);
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }

        .pagination-btn:hover:not(:disabled) {
            background-color: var(--light-color);
        }

        .pagination-btn.active {
            background-color: var(--primary-color);
            color: #fff;
            border-color: var(--primary-color);
        }

        .pagination-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    @@media (max-width: 992px) {
        .user-management-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-actions {
            width: 100%;
            margin-top: 15px;
        }

        .search-input input {
            width: 100%;
        }

        .table-controls {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .pagination-container {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
    }

    @@media (max-width: 768px) {
        .user-table th, .user-table td {
            padding: 10px 12px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 5px;
        }

        .action-btn {
            width: 30px;
            height: 30px;
        }
    }
</style>

@section Scripts {
    <script>
        // Quick search functionality
        document.getElementById('quickSearchBtn').addEventListener('click', function() {
            const searchTerm = document.getElementById('quickSearch').value.toLowerCase();
            const rows = document.querySelectorAll('.user-table tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Items per page functionality
        document.getElementById('pageSizeSelect').addEventListener('change', function() {
            const pageSize = this.value;
            // You would typically reload the page with the new page size parameter
            // For now, we'll just log it
            console.log('Items per page changed to:', pageSize);
        });

        // Alert for actions
        document.querySelectorAll('.action-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (this.classList.contains('delete-btn')) {
                    if (!confirm('Are you sure you want to delete this user?')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
}