@model M_Suite.Models.User

@{
    ViewData["Title"] = "User Profile";
}

<div class="container-fluid user-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-user me-2"></i>@Model.UsFirstName @Model.UsLastName's Profile</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Personal Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsCode" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsCode"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsFirstName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsFirstName"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsLastName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsLastName"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsShortName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsShortName"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsLogin" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsLogin"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsEmail" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsEmail"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input value="@(Model.UsActive == 1 ? "Active" : "Inactive")" class="form-control" placeholder=" " readonly />
                                <label>Account Status</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input value="@(Model.UsReadonly == 1 ? "Yes" : "No")" class="form-control" placeholder=" " readonly />
                                <label>Readonly Access</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Settings Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Additional Settings</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input value="@(Model.UsReceiveNotification == 1 ? "Yes" : "No")" class="form-control" placeholder=" " readonly />
                                <label>Receive Notifications</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input value="@(Model.UsExpiryDate?.ToString("MMM dd, yyyy") ?? "No expiry date")" class="form-control" placeholder=" " readonly />
                                <label>Expiry Date</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model?.UsId" class="btn btn-primary px-4">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .user-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }
    </style>
}