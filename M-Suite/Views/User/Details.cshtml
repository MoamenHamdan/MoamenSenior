@model M_Suite.Models.User
@{
    ViewData["Title"] = "User Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .profile-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .profile-header {
            background: rgb(60, 131, 245);
            color: white;
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }

        .profile-header h2 {
            margin: 0;
            font-size: 1.875rem;
            font-weight: 600;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 2;
            gap: 1.5rem;
        }

        .profile-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
            transition: transform 0.2s ease-in-out;

        }

        .profile-card:hover {
            transform: translateY(-2px);
        }

        .card-title {
            color: rgb(60, 131, 245);
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .info-grid {
            display: grid;
            gap: 1rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .info-label {
            color: #6b7280;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .info-value {
            color: #111827;
            font-size: 1rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-active {
            background-color: #fff;
            color: rgb(60, 131, 245);;
            width: fit-content;
        }

        .status-inactive {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .action-buttons {
            display: flex;
            gap: 1.5rem;
            margin-top: 2rem;
            justify-content: center;
            margin-top: 20px;
        }
.btn {
            padding: 6px 10px;
            text-align: center;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 120px;
            cursor: pointer;
            border: none;
            margin-top: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-primary {
            background-color: rgb(60, 131, 245);
            color: white;
        }

        .btn-primary:hover {
            background-color: rgb(45, 116, 230);
        }

        .btn-secondary {
            background-color: #e5e7eb;
            color: #4b5563;
        }

        .btn-secondary:hover {
            background-color: #d1d5db;
        }

    </style>
}

<div class="profile-container">
    <div class="profile-header">
        <h2>@Model.UsFirstName @Model.UsLastName's Profile</h2>
    </div>

    <div class="profile-content">
        <div class="profile-card">
            <h3 class="card-title">Personal Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">User Code</span>
                    <span class="info-value">@Model.UsCode</span>
                </div>
                <div class="info-item">
                    <span class="info-label">First Name</span>
                    <span class="info-value">@Model.UsFirstName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Last Name</span>
                    <span class="info-value">@Model.UsLastName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Short Name</span>
                    <span class="info-value">@Model.UsShortName</span>
                </div>
            </div>
        </div>

        <div class="profile-card">
            <h3 class="card-title">Account Information</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Username</span>
                    <span class="info-value">@Model.UsLogin</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email</span>
                    <span class="info-value">@Model.UsEmail</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Account Status</span>
                    <span class="status-badge @(Model.UsActive == 1 ? "status-active" : "status-inactive")">
                        @(Model.UsActive == 1 ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="info-item">
                    <span class="info-label">Readonly Access</span>
                    <span class="info-value">@(Model.UsReadonly == 1 ? "Yes" : "No")</span>
                </div>
            </div>
        </div>

        <div class="profile-card">
            <h3 class="card-title">Additional Settings</h3>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Receive Notifications</span>
                    <span class="info-value">@(Model.UsReceiveNotification == 1 ? "Yes" : "No")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Expiry Date</span>
                    <span class="info-value">@(Model.UsExpiryDate?.ToString("MMM dd, yyyy") ?? "No expiry date")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.UsId" class="btn btn-primary">
            <span class="edit-btn">Edit Profile</span>
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <span class="edit-btn">Back to List</span>
        </a>
    </div>
</div>
