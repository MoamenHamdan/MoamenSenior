@model M_Suite.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid user-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-user-slash me-2"></i>Delete User</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                <p>Are you sure you want to delete this user? This action cannot be undone.</p>
            </div>

            <!-- Personal Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsCode" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsCode"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsFirstName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsFirstName"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsLastName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsLastName"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsShortName" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsShortName"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Information Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="UsLogin" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsLogin"></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="UsEmail" class="form-control" placeholder=" " readonly />
                                <label asp-for="UsEmail"></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input value="@(Model.UsActive == 1 ? "Active" : "Inactive")" class="form-control" placeholder=" " readonly />
                                <label>Account Status</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input value="@(Model.UsReadonly == 1 ? "Yes" : "No")" class="form-control" placeholder=" " readonly />
                                <label>Readonly Access</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UsId" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .user-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #bb2d3b;
                border-color: #b02a37;
            }
    </style>
}