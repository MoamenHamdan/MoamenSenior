@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="login-container">
    <!-- Left Panel (Image) - Visible on larger screens -->
    <div class="login-image-panel">
        <div class="image-overlay"></div>
        <img src="/Images/malialogin.jpg" alt="Company Background" class="login-image">
        <div class="image-logo">
            <img src="/Images/logo.png" alt="Company Logo">
        </div>
    </div>

    <!-- Right Panel (Login Form) -->
    <div class="login-form-panel">
        <!-- Language Selector -->
        <div class="language-selector">
            <select class="language-dropdown" aria-label="Select language">
                <option value="en">English</option>
                <option value="ar">Arabic</option>
                <option value="fr">French</option>
            </select>
        </div>

        <!-- Login Form -->
        <form class="login-form" method="post" asp-controller="User" asp-action="Login">
            <h1 class="login-title">Welcome</h1>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
            }

            <div class="form-group">
                <label for="username" class="sr-only">Username</label>
                <input type="text" id="username" name="username" placeholder="Username" required class="form-input">
                <i class="fas fa-user input-icon"></i>
            </div>
            
            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" placeholder="Password" required class="form-input">
                <i class="fas fa-lock input-icon"></i>
            </div>
            
            <div class="form-options">
                <label class="remember-me">
                    <input type="checkbox" id="remember" name="remember">
                    <span class="checkmark"></span>
                    Remember me
                </label>
            </div>
            
            <button type="submit" class="login-button">
                <span>LOG IN</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            <div class="support-section">
                <h2 class="support-title">Support</h2>
                <div class="support-links">
                    <a href="#" onclick="showPhoneSupport()" class="support-link" aria-label="Phone support">
                        <i class="fas fa-phone"></i>
                        <span class="support-text">+961 1 900 100</span>
                    </a>
                    <a href="#" onclick="showEmailSupport()" class="support-link" aria-label="Email support">
                        <i class="fas fa-envelope"></i>
                        <span class="support-text">support@molloitec.com</span>
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Background Image for Mobile -->
    <div class="mobile-background-image"></div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
}