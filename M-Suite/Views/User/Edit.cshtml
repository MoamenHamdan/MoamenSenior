@model M_Suite.Models.User

@{
    ViewData["Title"] = "Edit User";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .profile-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .profile-header {
            background: rgb(60, 131, 245);
            color: white;
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }

        .profile-header h2 {
            margin: 0;
            font-size: 1.875rem;
            font-weight: 600;
        }

        .profile-content {
            display: grid;
            grid-template-columns: 2;
            gap: 1.5rem;
        }

        .profile-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
            transition: transform 0.2s ease-in-out;
        }

        .profile-card:hover {
            transform: translateY(-2px);
        }

        .card-title {
            color: rgb(60, 131, 245);
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            transition: border-color 0.2s ease-in-out;
        }

        .form-control:focus {
            border-color: rgb(60, 131, 245);
            outline: none;
            box-shadow: 0 0 0 3px rgba(60, 131, 245, 0.1);
        }

        .control-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #4b5563;
            font-weight: 500;
        }

        .text-danger {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: flex-end;
        }

        .btn {
            padding: 6px 10px;
            text-align: center;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 120px;
            cursor: pointer;
            border: none;
            margin-top: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-primary {
            background-color: rgb(60, 131, 245);
            color: white;
        }

        .btn-primary:hover {
            background-color: rgb(45, 116, 230);
        }

        .btn-secondary {
            background-color: #e5e7eb;
            color: #4b5563;
        }

        .btn-secondary:hover {
            background-color: #d1d5db;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .toggle-slider {
            background-color: rgb(60, 131, 245);
        }

        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }
    </style>
}

<div class="profile-container">
    <div class="profile-header">
        <h2>Edit User Profile</h2>
    </div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UsId" />

        <div class="profile-content">
            <div class="profile-card">
                <h3 class="card-title">Personal Information</h3>
                <div class="form-group">
                    <label asp-for="UsCode" class="control-label">User Code</label>
                    <input asp-for="UsCode" class="form-control" />
                    <span asp-validation-for="UsCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsFirstName" class="control-label">First Name</label>
                    <input asp-for="UsFirstName" class="form-control" />
                    <span asp-validation-for="UsFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsLastName" class="control-label">Last Name</label>
                    <input asp-for="UsLastName" class="form-control" />
                    <span asp-validation-for="UsLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsShortName" class="control-label">Short Name</label>
                    <input asp-for="UsShortName" class="form-control" />
                    <span asp-validation-for="UsShortName" class="text-danger"></span>
                </div>
            </div>

            <div class="profile-card">
                <h3 class="card-title">Account Information</h3>
                <div class="form-group">
                    <label asp-for="UsUsId" class="control-label">Super User ID</label>
                    <select asp-for="UsUsId" class="form-control" asp-items="ViewBag.UsUsId"></select>
                    <span asp-validation-for="UsUsId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsLogin" class="control-label">Username</label>
                    <input asp-for="UsLogin" class="form-control" />
                    <span asp-validation-for="UsLogin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsPassword" class="control-label">Password</label>
                    <input asp-for="UsPassword" class="form-control" type="password" />
                    <span asp-validation-for="UsPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsEmail" class="control-label">Email</label>
                    <input asp-for="UsEmail" class="form-control" type="email" />
                    <span asp-validation-for="UsEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="profile-card">
                <h3 class="card-title">Settings</h3>
                <div class="form-group">
                    <label asp-for="UsReceiveNotification" class="control-label">Receive Notifications</label>
                    <label class="toggle-switch">
                        <input type="checkbox" name="UsReceiveNotification" value="1" @(Model.UsReceiveNotification == 1 ? "checked" : "") />
                        <span class="toggle-slider"></span>
                    </label>
                    <span asp-validation-for="UsReceiveNotification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsExpiryDate" class="control-label">Expiry Date</label>
                    <input asp-for="UsExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="UsExpiryDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsActive" class="control-label">Account Status</label>
                    <label class="toggle-switch">
                        <input type="checkbox" name="UsActive" value="1" @(Model.UsActive == 1 ? "checked" : "") />
                        <span class="toggle-slider"></span>
                    </label>
                    <span asp-validation-for="UsActive" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
