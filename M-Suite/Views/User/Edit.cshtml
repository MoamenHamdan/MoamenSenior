@model M_Suite.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid user-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-user-edit me-2"></i>Edit User Profile</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="UsId" />

                <!-- Personal Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="UsCode" class="form-control" placeholder=" " />
                                    <label asp-for="UsCode"></label>
                                    <span asp-validation-for="UsCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UsFirstName" class="form-control" placeholder=" " />
                                    <label asp-for="UsFirstName"></label>
                                    <span asp-validation-for="UsFirstName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="UsLastName" class="form-control" placeholder=" " />
                                    <label asp-for="UsLastName"></label>
                                    <span asp-validation-for="UsLastName" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UsShortName" class="form-control" placeholder=" " />
                                    <label asp-for="UsShortName"></label>
                                    <span asp-validation-for="UsShortName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Account Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="UsUsId" class="form-select" asp-items="ViewBag.UsUsId">
                                        <option value="">-- Select Super User --</option>
                                    </select>
                                    <label asp-for="UsUsId"></label>
                                    <span asp-validation-for="UsUsId" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UsLogin" class="form-control" placeholder=" " />
                                    <label asp-for="UsLogin"></label>
                                    <span asp-validation-for="UsLogin" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="UsPassword" class="form-control" type="password" placeholder=" " />
                                    <label asp-for="UsPassword"></label>
                                    <span asp-validation-for="UsPassword" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UsEmail" class="form-control" type="email" placeholder=" " />
                                    <label asp-for="UsEmail"></label>
                                    <span asp-validation-for="UsEmail" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Settings Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Account Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="UsReceiveNotification" name="UsReceiveNotification" value="1" @(Model.UsReceiveNotification == 1 ? "checked" : "")>
                                    <label class="form-check-label" for="UsReceiveNotification">Receive Notifications</label>
                                    <span asp-validation-for="UsReceiveNotification" class="text-danger small d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="UsExpiryDate" class="form-control" type="date" placeholder=" " />
                                    <label asp-for="UsExpiryDate"></label>
                                    <span asp-validation-for="UsExpiryDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="UsActive" name="UsActive" value="1" @(Model.UsActive == 1 ? "checked" : "")>
                                    <label class="form-check-label" for="UsActive">Account Active</label>
                                    <span asp-validation-for="UsActive" class="text-danger small d-block"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                    <button type="reset" class="btn btn-outline-secondary">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .user-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .form-switch .form-check-input {
            width: 3.5em;
            margin-left: -2.5em;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap 5 validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}