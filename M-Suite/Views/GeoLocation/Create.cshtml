@model M_Suite.Models.GeoLocation

@{
    ViewData["Title"] = "Create Geo Location";
    var geoTypes = new List<SelectListItem>
    {
        new SelectListItem { Value = "1", Text = "AREA" },
        new SelectListItem { Value = "2", Text = "Country" },
        new SelectListItem { Value = "3", Text = "Region" },
        new SelectListItem { Value = "4", Text = "City" }
    };
}

<div class="container-fluid geo-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create Geo Location</h3>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <input asp-for="GlCode" class="form-control" placeholder=" " required />
                                    <label asp-for="GlCode"></label>
                                    <span asp-validation-for="GlCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3 required">
                                    <input asp-for="GlDescriptionLan1" class="form-control" placeholder=" " required />
                                    <label asp-for="GlDescriptionLan1">Description (AR)</label>
                                    <span asp-validation-for="GlDescriptionLan1" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <select asp-for="GlCdIdGeo" class="form-select" asp-items="geoTypes" required>
                                        <option value="">-- Select Type --</option>
                                    </select>
                                    <label asp-for="GlCdIdGeo"></label>
                                    <span asp-validation-for="GlCdIdGeo" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="GlGlId" class="form-select" asp-items="ViewBag.ParentLocations">
                                        <option value="">-- Select Parent --</option>
                                    </select>
                                    <label asp-for="GlGlId"></label>
                                    <span asp-validation-for="GlGlId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-globe me-2"></i>Multilingual Descriptions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="GlDescriptionLan2" class="form-control" placeholder=" " />
                                    <label asp-for="GlDescriptionLan2">Description (EN)</label>
                                    <span asp-validation-for="GlDescriptionLan2" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="GlDescriptionLan3" class="form-control" placeholder=" " />
                                    <label asp-for="GlDescriptionLan3">Description (FR)</label>
                                    <span asp-validation-for="GlDescriptionLan3" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}