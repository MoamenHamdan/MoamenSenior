@model IEnumerable<M_Suite.Models.GeoLocation>

@{
    ViewData["Title"] = "Geographic Locations";
    var geoTypes = new Dictionary<short, string>
    {
        { 1, "AREA" },
        { 2, "Country" },
        { 3, "Region" },
        { 4, "City" }
    };
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">Geographic Locations</h2>
            <p class="text-muted">Manage your geographic locations and their hierarchy</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Location
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.GlCode)</th>
                            <th>@Html.DisplayNameFor(model => model.GlDescriptionLan1)</th>
                            <th>Type</th>
                            <th>Parent Location</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.GlCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.GlDescriptionLan1)</td>
                                <td>
                                    @if (item.GlCdIdGeo.HasValue && geoTypes.ContainsKey((short)item.GlCdIdGeo.Value))
                                    {
                                        <span class="badge bg-info">@geoTypes[(short)item.GlCdIdGeo.Value]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Not Set</span>
                                    }
                                </td>
                                <td>
                                    @if (item.GlGlId.HasValue)
                                    {
                                        var parent = Model.FirstOrDefault(p => p.GlId == item.GlGlId);
                                        if (parent != null)
                                        {
                                            <span>@parent.GlCode - @parent.GlDescriptionLan1</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Parent not found</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Root</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.GlId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.GlId" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.GlId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }
        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}

