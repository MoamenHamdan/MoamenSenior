@model M_Suite.Models.GeoLocation

@{
    ViewData["Title"] = "Delete Geo Location";
    var geoTypes = new Dictionary<short, string>
    {
        { 1, "AREA" },
        { 2, "Country" },
        { 3, "Region" },
        { 4, "City" }
    };
}

<div class="container-fluid geo-container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Geo Location</h3>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                <p>You are about to permanently delete this location. This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Location Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Model.GlCode</dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">
                            @if (Model.GlCdIdGeo.HasValue && geoTypes.ContainsKey((short)Model.GlCdIdGeo.Value))
                            {
                                <span class="badge bg-primary">@geoTypes[(short)Model.GlCdIdGeo.Value]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Set</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Parent Location:</dt>
                        <dd class="col-sm-8">
                            @if (Model.GlGlId.HasValue)
                            {
                                var parent = ViewBag.ParentLocation as M_Suite.Models.GeoLocation;
                                if (parent != null)
                                {
                                    <span>@parent.GlCode - @parent.GlDescriptionLan1</span>
                                }
                                else
                                {
                                    <span class="text-muted">Parent not found</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Root</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Description (AR):</dt>
                        <dd class="col-sm-8">@Model.GlDescriptionLan1</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="GlId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}