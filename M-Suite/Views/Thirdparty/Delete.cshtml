@model M_Suite.Models.Thirdparty

@{
    ViewData["Title"] = "Delete Third Party";
}

<div class="container-fluid thirdparty-container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Third Party</h3>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                <p>You are about to permanently delete this third party. This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Third Party Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Model.ThpCode</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.ThpNameLan1</dd>

                        <dt class="col-sm-4">Types:</dt>
                        <dd class="col-sm-8">
                            @if (Model.ThpIsCustomer == 1)
                            {
                                <span class="badge bg-primary me-1">Customer</span>
                            }
                            @if (Model.ThpIsSupplier == 1)
                            {
                                <span class="badge bg-success me-1">Supplier</span>
                            }
                            @if (Model.ThpIsCompany == 1)
                            {
                                <span class="badge bg-info">Company</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.ThpActive == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Model.ThpCreateDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="ThpId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}