@model IEnumerable<M_Suite.Models.Thirdparty>

@{
    ViewData["Title"] = "Third Parties";
}

<div class="container-fluid thirdparty-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-users me-2"></i>Third Parties</h3>
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus me-1"></i> Create New
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table bu-table">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th class="actions-header">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td data-label="Code">
                                    <div class="cell-content">
                                        @item.ThpCode
                                    </div>
                                </td>
                                <td data-label="Name">
                                    <div class="cell-content">
                                        @item.ThpNameLan1
                                    </div>
                                </td>
                                <td data-label="Type">
                                    <div class="cell-content">
                                        @if (item.ThpIsCustomer == 1)
                                        {
                                            <span class="badge bg-primary me-1">Customer</span>
                                        }
                                        @if (item.ThpIsSupplier == 1)
                                        {
                                            <span class="badge bg-success me-1">Supplier</span>
                                        }
                                        @if (item.ThpIsCompany == 1)
                                        {
                                            <span class="badge bg-info">Company</span>
                                        }
                                    </div>
                                </td>
                                <td data-label="Status">
                                    <div class="cell-content">
                                        @if (item.ThpActive == 1)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </div>
                                </td>
                                <td data-label="Created Date">
                                    <div class="cell-content">
                                        @item.ThpCreateDate.ToString("dd/MM/yyyy")
                                    </div>
                                </td>
                                <td class="actions-cell">
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.ThpId" class="btn-action edit" title="Edit">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                            </svg>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ThpId" class="btn-action details" title="Details">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <line x1="12" y1="16" x2="12" y2="12"></line>
                                                <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                            </svg>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ThpId" class="btn-action delete" title="Delete">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .thirdparty-container {
            max-width: 100%;
            margin-top: 1rem;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .bu-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .bu-table th {
                background-color: #f8f9fa;
                padding: 1rem;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 0.5px;
            }

            .bu-table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: 1px solid #e9ecef;
            }

        .actions-cell {
            white-space: nowrap;
            width: 1%;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-action {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            padding: 0;
            border-radius: 50%;
            color: #6c757d;
            background-color: transparent;
            border: 1px solid #dee2e6;
            transition: all 0.2s;
        }

            .btn-action:hover {
                background-color: #f8f9fa;
            }

            .btn-action.edit:hover {
                color: #0d6efd;
                border-color: #0d6efd;
            }

            .btn-action.details:hover {
                color: #0dcaf0;
                border-color: #0dcaf0;
            }

            .btn-action.delete:hover {
                color: #dc3545;
                border-color: #dc3545;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}