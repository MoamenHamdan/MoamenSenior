@model IEnumerable<M_Suite.Models.Thirdparty>

@{
    ViewData["Title"] = "Third Parties";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <h1>Third Parties</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ThpCode)</th>
                    <th>@Html.DisplayNameFor(model => model.ThpNameLan1)</th>
                    <th>Type</th>
                    <th>@Html.DisplayNameFor(model => model.ThpActive)</th>
                    <th>@Html.DisplayNameFor(model => model.ThpCreateDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ThpCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.ThpNameLan1)</td>
                        <td>
                            @if (item.ThpIsCustomer==1)
                            {
                                <span class="badge bg-primary">Customer</span>
                            }
                            @if (item.ThpIsSupplier==1)
                            {
                                <span class="badge bg-success">Supplier</span>
                            }
                            @if (item.ThpIsCompany==1)
                            {
                                <span class="badge bg-info">Company</span>
                            }
                        </td>
                        <td>
                            @if (item.ThpActive==1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ThpCreateDate)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.ThpId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ThpId" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ThpId" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
