@model M_Suite.Models.Listprice

@{
    ViewData["Title"] = "Create Price List";
}

<div class="container-fluid pl-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-tags me-2"></i>Create New Price List</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Basic Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LpCode" class="form-control" placeholder=" " required />
                                    <label asp-for="LpCode"></label>
                                    <span asp-validation-for="LpCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="LpDescriptionLan1" class="form-control" placeholder=" " required />
                                    <label asp-for="LpDescriptionLan1">Description (Primary)</label>
                                    <span asp-validation-for="LpDescriptionLan1" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LpDescriptionLan2" class="form-control" placeholder=" " />
                                    <label asp-for="LpDescriptionLan2">Description (Secondary)</label>
                                    <span asp-validation-for="LpDescriptionLan2" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="LpDescriptionLan3" class="form-control" placeholder=" " />
                                    <label asp-for="LpDescriptionLan3">Description (Tertiary)</label>
                                    <span asp-validation-for="LpDescriptionLan3" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Settings Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Price List Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <select asp-for="LpBuId" class="form-select" asp-items="ViewBag.LpBuId">
                                        <option value="">-- Select Business Unit --</option>
                                    </select>
                                    <label asp-for="LpBuId">Business Unit</label>
                                    <span asp-validation-for="LpBuId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating mb-3 required">
                                    <select asp-for="LpCdIdCur" class="form-select" asp-items="ViewBag.LpCdIdCur" required>
                                        <option value="">-- Select Currency --</option>
                                    </select>
                                    <label asp-for="LpCdIdCur">Currency</label>
                                    <span asp-validation-for="LpCdIdCur" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="LpLevel" class="form-control" placeholder=" " type="number" />
                                    <label asp-for="LpLevel">Priority Level</label>
                                    <span asp-validation-for="LpLevel" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Date Range Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Date Range</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <input asp-for="LpFromDate" class="form-control" placeholder=" " type="date" required />
                                    <label asp-for="LpFromDate">From Date</label>
                                    <span asp-validation-for="LpFromDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <input asp-for="LpToDate" class="form-control" placeholder=" " type="date" required />
                                    <label asp-for="LpToDate">To Date</label>
                                    <span asp-validation-for="LpToDate" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-toggle-on me-2"></i>Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input type="hidden" asp-for="LpActive" value="0" />
                            <input class="form-check-input" type="checkbox" id="LpActiveToggle"
                            @(Model.LpActive == 1 ? "checked" : "") />
                            <label class="form-check-label" for="LpActiveToggle">Active Price List</label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Price List
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .pl-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .form-check-input {
            width: 3em;
            height: 1.5em;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap 5 validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Handle the active toggle
        document.getElementById('LpActiveToggle').addEventListener('change', function() {
            document.querySelector('input[name="LpActive"]').value = this.checked ? '1' : '0';
        });
    </script>
}