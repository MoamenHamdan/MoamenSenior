@model M_Suite.Models.Thirdparty

@{
    ViewData["Title"] = "Create Third Party";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create New Third Party</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ThpCode" class="control-label">Code</label>
                            <input asp-for="ThpCode" class="form-control" />
                            <span asp-validation-for="ThpCode" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ThpNameLan1" class="control-label">Name (English)</label>
                            <input asp-for="ThpNameLan1" class="form-control" />
                            <span asp-validation-for="ThpNameLan1" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ThpNameLan2" class="control-label">Name (Arabic)</label>
                            <input asp-for="ThpNameLan2" class="form-control" />
                            <span asp-validation-for="ThpNameLan2" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="hidden" name="ThpIsCustomer" value="0" />
                                <input type="checkbox" name="ThpIsCustomer" value="1" class="form-check-input" 
                                       @(Model.ThpIsCustomer == 1 ? "checked" : "") />
                                <label class="form-check-label">Is Customer</label>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="hidden" name="ThpIsSupplier" value="0" />
                                <input type="checkbox" name="ThpIsSupplier" value="1" class="form-check-input" 
                                       @(Model.ThpIsSupplier == 1 ? "checked" : "") />
                                <label class="form-check-label">Is Supplier</label>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="hidden" name="ThpIsCompany" value="0" />
                                <input type="checkbox" name="ThpIsCompany" value="1" class="form-check-input" 
                                       @(Model.ThpIsCompany == 1 ? "checked" : "") />
                                <label class="form-check-label">Is Company</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
