@model M_Suite.Models.PhysicalLocation

@{
    ViewData["Title"] = "Create Physical Location";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="PlCode" class="control-label"></label>
        <input asp-for="PlCode" class="form-control" />
        <span asp-validation-for="PlCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlLevel" class="control-label"></label>
        <input asp-for="PlLevel" class="form-control" />
        <span asp-validation-for="PlLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlDescriptionLan1" class="control-label"></label>
        <input asp-for="PlDescriptionLan1" class="form-control" />
        <span asp-validation-for="PlDescriptionLan1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlDescriptionLan2" class="control-label"></label>
        <input asp-for="PlDescriptionLan2" class="form-control" />
        <span asp-validation-for="PlDescriptionLan2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlDescriptionLan3" class="control-label"></label>
        <input asp-for="PlDescriptionLan3" class="form-control" />
        <span asp-validation-for="PlDescriptionLan3" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlBuId" class="control-label"></label>
      <select asp-for="PlBuId" class="form-control" asp-items="@(ViewData["PlBuId"] as SelectList)"></select>

        <span asp-validation-for="PlBuId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlCdIdPlt" class="control-label"></label>
<select asp-for="PlCdIdPlt" class="form-control" asp-items="@(ViewData["PlCdIdPlt"] as SelectList)"></select>

        <span asp-validation-for="PlCdIdPlt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlMdId" class="control-label"></label>
     <select asp-for="PlMdId" class="form-control" asp-items="@(ViewData["PlMdId"] as SelectList)"></select>

        <span asp-validation-for="PlMdId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlPlId" class="control-label"></label>
        <select asp-for="PlPlId" class="form-control" asp-items="@(ViewData["PlPlId"] as SelectList)"></select>
        <span asp-validation-for="PlPlId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlActive" class="control-label"></label>
        <input asp-for="PlActive" type="checkbox" class="form-check-input" />
        <span asp-validation-for="PlActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlImpUid" class="control-label"></label>
        <input asp-for="PlImpUid" class="form-control" />
        <span asp-validation-for="PlImpUid" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
