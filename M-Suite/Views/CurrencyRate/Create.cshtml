@model M_Suite.Models.CurrencyRate

@{
    ViewData["Title"] = "Create Currency Rate";
}

<div class="container-fluid currency-form-container">
    <div class="card shadow-lg">
        <div class="card-header bg-financial text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Currency Rate</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <!-- Basic Rate Information -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Rate Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-floating mb-3">
                                    <input asp-for="CrDate" class="form-control" type="date" required />
                                    <label asp-for="CrDate"></label>
                                    <span asp-validation-for="CrDate" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select asp-for="CrCdIdCurFrom" class="form-select" required>
                                                <option value="">-- From Currency --</option>
                                                <!-- Populate with actual currency options -->
                                                <option value="1">USD</option>
                                                <option value="2">EUR</option>
                                                <option value="3">GBP</option>
                                            </select>
                                            <label asp-for="CrCdIdCurFrom"></label>
                                            <span asp-validation-for="CrCdIdCurFrom" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <select asp-for="CrCdIdCurTo" class="form-select" required>
                                                <option value="">-- To Currency --</option>
                                                <!-- Populate with actual currency options -->
                                                <option value="1">USD</option>
                                                <option value="2">EUR</option>
                                                <option value="3">GBP</option>
                                            </select>
                                            <label asp-for="CrCdIdCurTo"></label>
                                            <span asp-validation-for="CrCdIdCurTo" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="CrBuId" class="form-select" required>
                                        <option value="">-- Select Business Unit --</option>
                                        <!-- Populate with actual business units -->
                                        <option value="1">Main Branch</option>
                                        <option value="2">East Region</option>
                                    </select>
                                    <label asp-for="CrBuId"></label>
                                    <span asp-validation-for="CrBuId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Rate Visualization -->
                        <div class="card mb-4 h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Rate Preview</h5>
                            </div>
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <div class="rate-visualization text-center">
                                    <div class="currency-pair mb-3">
                                        <span class="from-currency">USD</span>
                                        <i class="fas fa-exchange-alt mx-3"></i>
                                        <span class="to-currency">EUR</span>
                                    </div>
                                    <div class="rate-display">
                                        <div class="buy-rate">
                                            <span class="rate-label">Buy:</span>
                                            <span class="rate-value">1.2345</span>
                                        </div>
                                        <div class="sell-rate mt-2">
                                            <span class="rate-label">Sell:</span>
                                            <span class="rate-value">1.2456</span>
                                        </div>
                                    </div>
                                    <div class="rate-range mt-4">
                                        <small class="text-muted">Buy Range: 1.2000 - 1.2500</small><br>
                                        <small class="text-muted">Sell Range: 1.2300 - 1.2600</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rate Values -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-arrow-up text-success me-2"></i>Buy Rates</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrRateBuy" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrRateBuy">Current Rate</label>
                                            <span asp-validation-for="CrRateBuy" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrMinRateBuy" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrMinRateBuy">Min Rate</label>
                                            <span asp-validation-for="CrMinRateBuy" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrMaxRateBuy" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrMaxRateBuy">Max Rate</label>
                                            <span asp-validation-for="CrMaxRateBuy" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="fas fa-arrow-down text-danger me-2"></i>Sell Rates</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrRateSell" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrRateSell">Current Rate</label>
                                            <span asp-validation-for="CrRateSell" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrMinRateSell" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrMinRateSell">Min Rate</label>
                                            <span asp-validation-for="CrMinRateSell" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="CrMaxRateSell" class="form-control" placeholder=" " type="number" step="0.0001" />
                                            <label asp-for="CrMaxRateSell">Max Rate</label>
                                            <span asp-validation-for="CrMaxRateSell" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-financial">
                        <i class="fas fa-save me-2"></i>Create Rate
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Real-time rate visualization update
        $(document).ready(function () {
            function updateRateVisualization() {
                const fromCurrency = $('#CrCdIdCurFrom option:selected').text() || 'USD';
                const toCurrency = $('#CrCdIdCurTo option:selected').text() || 'EUR';
                const buyRate = $('#CrRateBuy').val() || '1.2345';
                const sellRate = $('#CrRateSell').val() || '1.2456';
                const minBuy = $('#CrMinRateBuy').val() || '1.2000';
                const maxBuy = $('#CrMaxRateBuy').val() || '1.2500';
                const minSell = $('#CrMinRateSell').val() || '1.2300';
                const maxSell = $('#CrMaxRateSell').val() || '1.2600';

                $('.from-currency').text(fromCurrency);
                $('.to-currency').text(toCurrency);
                $('.rate-value').eq(0).text(buyRate);
                $('.rate-value').eq(1).text(sellRate);
                $('.rate-range small').eq(0).text(`Buy Range: ${minBuy} - ${maxBuy}`);
                $('.rate-range small').eq(1).text(`Sell Range: ${minSell} - ${maxSell}`);
            }

            // Update visualization when any rate field changes
            $('input[type="number"], select').on('input change', updateRateVisualization);

            // Initialize
            updateRateVisualization();
        });
    </script>
}