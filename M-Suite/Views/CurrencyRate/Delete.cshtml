@model M_Suite.Models.CurrencyRate

@{
    ViewData["Title"] = "Delete Currency Rate";
}

<div class="container-fluid currency-delete-container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Currency Rate</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-danger">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h5 class="mb-1">Warning! This action is irreversible</h5>
                        <p class="mb-0">You are about to permanently delete this currency rate record.</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Rate Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Date:</dt>
                                <dd class="col-sm-8">@Model.CrDate.ToString("dd MMM yyyy")</dd>

                                <dt class="col-sm-4">Currency Pair:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.CrCdIdCurFrom</span>
                                    <i class="fas fa-exchange-alt mx-2 text-muted"></i>
                                    <span class="badge bg-primary">@Model.CrCdIdCurTo</span>
                                </dd>

                                <dt class="col-sm-4">Business Unit:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.CrBuId</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Buy Rate:</dt>
                                <dd class="col-sm-8 text-success fw-bold">@Model.CrRateBuy?.ToString("N4")</dd>

                                <dt class="col-sm-4">Sell Rate:</dt>
                                <dd class="col-sm-8 text-danger fw-bold">@Model.CrRateSell?.ToString("N4")</dd>

                                <dt class="col-sm-4">Last Updated:</dt>
                                <dd class="col-sm-8">@DateTime.Now.ToString("g")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-exclamation-circle me-2 text-danger"></i>Confirmation</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-question-circle me-2"></i>Are you absolutely sure?</h5>
                        <p class="mb-0">This action cannot be undone. This will permanently delete the currency rate for <strong>@Model.CrCdIdCurFrom/@Model.CrCdIdCurTo</strong> on <strong>@Model.CrDate.ToString("d")</strong>.</p>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="CrId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}