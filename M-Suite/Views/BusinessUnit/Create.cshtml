@model M_Suite.Models.BusinessUnit

@{
    ViewData["Title"] = "Create Business Unit";
}

<div class="container-fluid bu-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-building me-2"></i>Create New Business Unit</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Basic Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuCode" class="form-control" placeholder=" " required />
                                    <label asp-for="BuCode"></label>
                                    <span asp-validation-for="BuCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="BuCpId" class="form-select" asp-items="ViewBag.BuCpId" required>
                                        <option value="">-- Select Company --</option>
                                    </select>
                                    <label asp-for="BuCpId"></label>
                                    <span asp-validation-for="BuCpId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuDescriptionLan1" class="form-control" placeholder=" " required />
                                    <label asp-for="BuDescriptionLan1">Description (AR)</label>
                                    <span asp-validation-for="BuDescriptionLan1" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-globe me-2"></i>Multilingual Descriptions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuDescriptionLan2" class="form-control" placeholder=" " />
                                    <label asp-for="BuDescriptionLan2">Description (EN)</label>
                                    <span asp-validation-for="BuDescriptionLan2" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuDescriptionLan3" class="form-control" placeholder=" " />
                                    <label asp-for="BuDescriptionLan3">Description (FR)</label>
                                    <span asp-validation-for="BuDescriptionLan3" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hierarchy Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-sitemap me-2"></i>Hierarchy Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuPath" class="form-control" placeholder=" " required />
                                    <label asp-for="BuPath">BU Path</label>
                                    <span asp-validation-for="BuPath" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="BuBuId" class="form-select" asp-items="ViewBag.BuBuId">
                                        <option value="">-- Select Parent BU --</option>
                                    </select>
                                    <label asp-for="BuBuId">Parent Business Unit</label>
                                    <span asp-validation-for="BuBuId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuLeId" class="form-control" placeholder=" " />
                                    <label asp-for="BuLeId">Legal Entity</label>
                                    <span asp-validation-for="BuLeId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuOuId" class="form-control" placeholder=" " />
                                    <label asp-for="BuOuId">Organization Unit</label>
                                    <span asp-validation-for="BuOuId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="BuPrefix" class="form-control" placeholder=" " />
                                    <label asp-for="BuPrefix">Prefix</label>
                                    <span asp-validation-for="BuPrefix" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create Business Unit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .bu-container {
            max-width: 1200px;
            margin-top: 2rem;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1.25rem;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap 5 validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}