@model M_Suite.Models.BusinessUnit

@{
    ViewData["Title"] = "Business Unit Details";
}

<div class="container-fluid bu-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-building me-2"></i>Business Unit Details</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Model.BuCode</dd>

                        <dt class="col-sm-4">Company:</dt>
                        <dd class="col-sm-8">@(Model.BuCp?.CpNameLan1 ?? "None")</dd>

                        <dt class="col-sm-4">Description (AR):</dt>
                        <dd class="col-sm-8">@Model.BuDescriptionLan1</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-globe me-2"></i>Multilingual Descriptions</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Description (EN):</dt>
                        <dd class="col-sm-8">@Model.BuDescriptionLan2</dd>

                        <dt class="col-sm-4">Description (FR):</dt>
                        <dd class="col-sm-8">@Model.BuDescriptionLan3</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-sitemap me-2"></i>Hierarchy Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">BU Path:</dt>
                        <dd class="col-sm-8">@Model.BuPath</dd>

                        <dt class="col-sm-4">Parent BU:</dt>
                        <dd class="col-sm-8">@(Model.BuBu?.BuCode ?? "None")</dd>
                    </dl>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model.BuId" class="btn btn-primary me-md-2">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}