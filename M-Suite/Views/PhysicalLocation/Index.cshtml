@model IEnumerable<M_Suite.Models.PhysicalLocation>

@{
    ViewData["Title"] = "Physical Locations";
}

@section Styles {
    <link rel="stylesheet" href="~/css/physical-locations.css" />
}

<div class="physical-locations-container">
    <div class="pl-header">
        <div class="header-content">
            <h1>
                <i class="fas fa-map-marker-alt me-2"></i>
                Physical Locations
            </h1>
            <div class="header-actions">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New
                </a>
            </div>
        </div>
    </div>

    <div class="pl-table-container">
        <div class="table-responsive">
            <table class="pl-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Level</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th class="actions-header">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Code">
                                <div class="cell-content">
                                    <span class="pl-code">@item.PlCode</span>
                                </div>
                            </td>
                            <td data-label="Description">
                                <div class="cell-content">
                                    @item.PlDescriptionLan1
                                </div>
                            </td>
                            <td data-label="Level">
                                <div class="cell-content">
                                    @item.PlLevel
                                </div>
                            </td>
                            <td data-label="Type">
                                <div class="cell-content">
                                    @(item.PlCdIdPltNavigation?.CdDescriptionLan1 ?? "N/A")
                                </div>
                            </td>
                            <td data-label="Status">
                                <div class="cell-content">
                                    @if (item.PlActive == 1)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                            </td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.PlId" class="btn-action edit" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PlId" class="btn-action details" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PlId" class="btn-action delete" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.pl-table').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: -1 } // Disable sorting for actions column
                ]
            });
        });
    </script>
}