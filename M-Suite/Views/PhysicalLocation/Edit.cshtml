@model M_Suite.Models.PhysicalLocation

@{
    ViewData["Title"] = "Edit Physical Location";
}

<div class="container-fluid pl-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Physical Location</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="PlId" />

                <!-- Basic Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <input asp-for="PlCode" class="form-control" placeholder=" " required />
                                    <label asp-for="PlCode"></label>
                                    <span asp-validation-for="PlCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3 required">
                                    <input asp-for="PlDescriptionLan1" class="form-control" placeholder=" " required />
                                    <label asp-for="PlDescriptionLan1">Description (AR)</label>
                                    <span asp-validation-for="PlDescriptionLan1" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <select asp-for="PlCdIdPlt" class="form-select" asp-items="ViewBag.PlCdIdPlt" required>
                                        <option value="">-- Select Location Type --</option>
                                    </select>
                                    <label asp-for="PlCdIdPlt">Location Type</label>
                                    <span asp-validation-for="PlCdIdPlt" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3 required">
                                    <select asp-for="PlMdId" class="form-select" asp-items="ViewBag.PlMdId" required>
                                        <option value="">-- Select Module --</option>
                                    </select>
                                    <label asp-for="PlMdId">Module</label>
                                    <span asp-validation-for="PlMdId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Multilingual Descriptions Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-globe me-2"></i>Multilingual Descriptions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="PlDescriptionLan2" class="form-control" placeholder=" " />
                                    <label asp-for="PlDescriptionLan2">Description (EN)</label>
                                    <span asp-validation-for="PlDescriptionLan2" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="PlDescriptionLan3" class="form-control" placeholder=" " />
                                    <label asp-for="PlDescriptionLan3">Description (FR)</label>
                                    <span asp-validation-for="PlDescriptionLan3" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hierarchy Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-sitemap me-2"></i>Hierarchy Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="PlPlId" class="form-select" asp-items="ViewBag.PlPlId">
                                        <option value="">-- Select Parent Location --</option>
                                    </select>
                                    <label asp-for="PlPlId">Parent Location</label>
                                    <span asp-validation-for="PlPlId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="PlLevel" class="form-control" placeholder=" " type="number" />
                                    <label asp-for="PlLevel">Level</label>
                                    <span asp-validation-for="PlLevel" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-toggle-on me-2"></i>Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="PlActive" class="form-select">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                    <label asp-for="PlActive">Status</label>
                                    <span asp-validation-for="PlActive" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="PlBuId" class="form-select" asp-items="ViewBag.PlBuId">
                                        <option value="">-- Select Business Unit --</option>
                                    </select>
                                    <label asp-for="PlBuId">Business Unit</label>
                                    <span asp-validation-for="PlBuId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="reset" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap 5 validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}