@model M_Suite.Models.Uom

@{
    ViewData["Title"] = "Edit Unit of Measure";
}

<div class="container-fluid uom-container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Unit of Measure</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="UomId" />

                <!-- Basic Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 required">
                                    <input asp-for="UomCode" class="form-control" placeholder=" " required />
                                    <label asp-for="UomCode"></label>
                                    <span asp-validation-for="UomCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UomNameLan1" class="form-control" placeholder=" " />
                                    <label asp-for="UomNameLan1">Name (Primary)</label>
                                    <span asp-validation-for="UomNameLan1" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="UomNameLan2" class="form-control" placeholder=" " />
                                    <label asp-for="UomNameLan2">Name (Secondary)</label>
                                    <span asp-validation-for="UomNameLan2" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="UomNameLan3" class="form-control" placeholder=" " />
                                    <label asp-for="UomNameLan3">Name (Tertiary)</label>
                                    <span asp-validation-for="UomNameLan3" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Settings Section -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-cog me-2"></i>UOM Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="UomRoundingPrecision" class="form-control" placeholder=" " type="number" min="0" max="10" />
                                    <label asp-for="UomRoundingPrecision">Rounding Precision</label>
                                    <span asp-validation-for="UomRoundingPrecision" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="UomOrder" class="form-control" placeholder=" " />
                                    <label asp-for="UomOrder">Sort Order</label>
                                    <span asp-validation-for="UomOrder" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input type="hidden" asp-for="UomIsBase" value="0" />
                                    <input class="form-check-input" type="checkbox" id="UomIsBaseToggle"
                                    @(Model.UomIsBase == 1 ? "checked" : "") />
                                    <label class="form-check-label" for="UomIsBaseToggle">Is Base Unit</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check form-switch">
                                    <input type="hidden" asp-for="UomIsSaleable" value="0" />
                                    <input class="form-check-input" type="checkbox" id="UomIsSaleableToggle"
                                    @(Model.UomIsSaleable == 1 ? "checked" : "") />
                                    <label class="form-check-label" for="UomIsSaleableToggle">Is Saleable</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Details" asp-route-id="@Model.UomId" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Enable Bootstrap 5 validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Handle the toggle switches
        document.getElementById('UomIsBaseToggle').addEventListener('change', function() {
            document.querySelector('input[name="UomIsBase"]').value = this.checked ? '1' : '0';
        });

        document.getElementById('UomIsSaleableToggle').addEventListener('change', function() {
            document.querySelector('input[name="UomIsSaleable"]').value = this.checked ? '1' : '0';
        });
    </script>
}