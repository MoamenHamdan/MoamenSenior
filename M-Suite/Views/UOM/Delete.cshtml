@model M_Suite.Models.Uom

@{
    ViewData["Title"] = "Delete Unit of Measure";
}

<div class="container-fluid uom-container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Delete Unit of Measure</h3>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                <p>You are about to permanently delete this unit of measure. This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Unit Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Model.UomCode</dd>

                        <dt class="col-sm-4">Name (Primary):</dt>
                        <dd class="col-sm-8">@(Model.UomNameLan1 ?? "-")</dd>

                        <dt class="col-sm-4">Name (Secondary):</dt>
                        <dd class="col-sm-8">@(Model.UomNameLan2 ?? "-")</dd>

                        <dt class="col-sm-4">Name (Tertiary):</dt>
                        <dd class="col-sm-8">@(Model.UomNameLan3 ?? "-")</dd>

                        <dt class="col-sm-4">Rounding Precision:</dt>
                        <dd class="col-sm-8">@(Model.UomRoundingPrecision?.ToString() ?? "-")</dd>

                        <dt class="col-sm-4">Is Base Unit:</dt>
                        <dd class="col-sm-8">
                            @if (Model.UomIsBase == 1)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Is Saleable:</dt>
                        <dd class="col-sm-8">
                            @if (Model.UomIsSaleable == 1)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Sort Order:</dt>
                        <dd class="col-sm-8">@(Model.UomOrder ?? "-")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="UomId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .uom-container {
            max-width: 1000px;
            margin-top: 2rem;
        }

        .badge {
            font-size: 0.9em;
            padding: 0.35em 0.65em;
        }
    </style>
}