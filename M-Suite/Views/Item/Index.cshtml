@model IEnumerable<M_Suite.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Items</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New
            </a>
        </div>
    </div>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ItCode)</th>
                    <th>@Html.DisplayNameFor(model => model.ItDescriptionLan1)</th>
                    <th>UOM</th>
                    <th>Item Group</th>
                    <th>Type</th>
                    <th>Properties</th>
                    <th>@Html.DisplayNameFor(model => model.ItActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ItCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.ItDescriptionLan1)</td>
                        <td>@(item.ItUom?.UomCode ?? "N/A")</td>
                        <td>@(item.ItCdIdItgNavigation?.CdId.ToString() ?? "N/A")</td>
                        <td>
                            @if (item.ItIsService == 1) { <span class="badge bg-info">Service</span> }
                            @if (item.ItIsAsset == 1) { <span class="badge bg-warning">Asset</span> }
                            @if (item.ItIsSaleable == 1) { <span class="badge bg-success">Saleable</span> }
                        </td>
                        <td>
                            @if (item.ItHasLot == 1) { <span class="badge bg-secondary">Lot</span> }
                            @if (item.ItHasSerial == 1) { <span class="badge bg-secondary">Serial</span> }
                            @if (item.ItHasMultipleUom == 1) { <span class="badge bg-secondary">Multi-UOM</span> }
                        </td>
                        <td>
                            @if (item.ItActive == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.ItId" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ItId" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ItId" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-dismiss success message after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert-success').fadeOut('slow');
            }, 5000);
        });
    </script>
}
