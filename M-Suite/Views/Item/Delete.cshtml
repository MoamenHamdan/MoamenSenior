@model M_Suite.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container-fluid">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Item</h3>
            </div>
        </div>

        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this item?</h4>
            <hr />

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                Deleting this item will permanently remove it from the system. This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Item Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.ItCode</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.ItDescriptionLan1</dd>

                        <dt class="col-sm-4">UOM</dt>
                        <dd class="col-sm-8">@Model.ItUom?.UomNameLan1</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.ItActive == 1)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="ItId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>